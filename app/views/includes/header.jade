
.container
	.img.img-rounded(src="/wp-content/uploads/2014/06/download.png")
		.row.toptitle
			.col-md-2
				h4.text-top= title
					small 电影专区
			.col-md-6
				ul.nav.nav-pills
					li.active(role="presentation")
						a(href="#") 首页
					li(role="presentation")
						a(href="#") 频道
					li(role="presentation")
						a(href="#") 系列
					li(role="presentation")
						a(href="#") 幕后
					li(role="presentation")
						a(href="#") 专题
			.col-md-4
				form(method="GET",action='/results')
					.input-group.col-sm-10.pullright
						input.glyphicon.glyphicon-search.form-control(type='text',name='q')
						span.input-group-btn
							button.btn.btn-default(type='submit') 提交
.narbar.navbar-default.navbar-fixed-bottom
	.alert.alert-warning.alert-dismissible(role="alert")
		button.close(type="button" data-dismiss="alert" aria-label="Close") &times;
		strong warning!  <u>点击链接查看详情 </u>
		a.alert-link(href="#")  www.baidu.com
	.container
		.navbar-header
			a.navbar-brand(href="/") 新世界
		if user
			p.navbar-text.navbar-right
				span 欢迎您,#{user.name}
				span &nbsp;|&nbsp;
				a.navbar-link(href="/logout") 登出
		else
			p.navbar-text.navbar-right
				a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") 注册
				span &nbsp;|&nbsp;
				a.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") 登陆
#signupModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST",action="/user/signup")
				.modal-header 注册
				.modal-body
					.form-group
						lable(for="signupName")  用户名
						input#signupName.form-control(name="user[name]",type="text")
					.form-group
						lable(for="signupPassword") 密码
						input#signupName.form-control(name="user[password]",type="text")
				.modal-footer
					button.btn.btn-default(type="button",data-dismiss="modal") 关闭
					button.btn.btn-success(type="submit") 提交
#signinModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST",action="/user/signin")
				.modal-header 登陆
				.modal-body
					.form-group
						lable(for="signinName")  用户名
						input#signinName.form-control(name="user[name]",type="text")
					.form-group
						lable(for="signinPassword") 密码
						input#signinName.form-control(name="user[password]",type="text")
				.modal-footer
					button.btn.btn-default(type="button",data-dismiss="modal") 关闭
					button.btn.btn-success(type="submit") 提交
						
