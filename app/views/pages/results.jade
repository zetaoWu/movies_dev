extends ../layout

block content
	.container
		.row
			.panel.panel-default
				.panel-heading
					.h3  #{keyword}
				.panel-body
					if movies && movies.length > 0 
						each item in movies
							.col-md-2
								.thumbnail
									a(href="/movie/#{item._id}")
										img(src="#{item.poster}",alt="#{item.title}")
									.caption
										h3 #{item.title}
										p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片
			ul.pagination
				- for(var i=0;i<totalPage;i++){
					-if(currntPage==(i+1)){
						li.active
							span #{currntPage}
					-}else{
						li
							a(href='/results?p=#{i}&&#{query}') #{i+1}
					-}
				-}